<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">


        <Button
            android:id="@+id/dis"
            android:layout_width="173dp"
            android:layout_height="147dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="65dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="503dp"
            android:background="@drawable/custom_button"
            android:text="Distance"
            android:textColor="#F4F2F2"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tem"
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_alignBottom="@+id/tim"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="148dp"
            android:layout_marginEnd="130dp"
            android:layout_marginBottom="80dp"
            android:background="@drawable/custom_button"
            android:text="Temperature"
            android:textColor="#F1EAEA"
            android:textSize="14sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/tim"
            android:layout_width="171dp"
            android:layout_height="76dp"
            android:layout_below="@+id/button_convert"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="129dp"
            android:layout_marginBottom="337dp"
            android:background="@drawable/custom_button"
            android:text="Time"
            android:textColor="#ECE5E5"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/are"
            android:layout_width="172dp"
            android:layout_height="76dp"
            android:layout_below="@+id/button_convert"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="110dp"
            android:layout_marginEnd="122dp"
            android:layout_marginBottom="255dp"
            android:background="@drawable/custom_button"
            android:text="Area"
            android:textColor="#EFE9E9"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/wei"
            android:layout_width="204dp"
            android:layout_height="86dp"
            android:layout_below="@+id/button_convert"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="103dp"
            android:layout_marginTop="397dp"
            android:layout_marginEnd="120dp"
            android:layout_marginBottom="182dp"
            android:background="@drawable/custom_button"
            android:text="Weight"
            android:textColor="#EAE5E5"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="384dp"
            android:layout_height="84dp"
            android:gravity="center_horizontal"
            android:text="Select the converter"
            android:textColor="#FDFDFD"
            android:textSize="30sp"
            android:textStyle="bold" />


    </RelativeLayout>

</LinearLayout>